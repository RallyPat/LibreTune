{
  "name": "libretune-app",
  "description": "Modern ECU tuning software for Speeduino, EpicEFI, and compatible ECUs",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-2.0-only",
  "author": "LibreTune Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/RallyPat/LibreTune.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "release": "bash ../../scripts/build-release.sh",
    "release:clean": "bash ../../scripts/build-release.sh --clean",
    "docs:frontend": "typedoc",
    "docs:rust": "cd ../libretune-core && cargo doc --no-deps --open",
    "docs:user": "mdbook build ../../docs && mdbook serve ../../docs --open",
    "docs:all": "bash ../../scripts/build-docs.sh",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@react-three/drei": "^9.30.0",
    "@react-three/fiber": "^8.0.27",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@types/three": "^0.182.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.182.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jsdom": "^21.1.1",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react": "^4.6.0",
    "jsdom": "^22.1.0",
    "typedoc": "^0.27.0",
    "typedoc-plugin-missing-exports": "^3.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^1.0.0"
  }
}
